# ============================================
# Application Settings
# ============================================
APP_NAME="Business Search Engine"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# API Settings
# ============================================
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=true  # Auto-reload on code changes (dev only)
API_WORKERS=1  # Number of worker processes

# CORS Settings (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
CORS_CREDENTIALS=true

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""  # Leave empty if no password
REDIS_URL="redis://localhost:6379/0"

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=600  # 10 minutes
CELERY_TASK_SOFT_TIME_LIMIT=540  # 9 minutes
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# ============================================
# Web Scraping Settings
# ============================================
SCRAPER_TIMEOUT=1000  # Seconds
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=2  # Seconds
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_HEADLESS=true
SCRAPER_RATE_LIMIT_DELAY=2  # Seconds between requests

# Nodriver settings
CHROME_BIN=""  # Leave empty to auto-detect
CHROME_HEADLESS=true

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER="ollama"  # ollama, openai, groq
LLM_MODEL="llama3.2"  # Model name
LLM_BASE_URL="http://localhost:11434"  # Ollama server URL
LLM_TIMEOUT=1000  # Seconds
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# OpenAI (if using openai as provider)
OPENAI_API_KEY=""

# Groq (if using groq as provider)
GROQ_API_KEY=""

# ============================================
# Database (Optional - for future use)
# ============================================
DATABASE_URL="sqlite:///./business_search.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/business_search"

# ============================================
# Security
# ============================================
SECRET_KEY="your-secret-key-change-in-production"  # Generate with: openssl rand -hex 32
API_KEY_HEADER="X-API-Key"  # Header name for API key authentication
API_KEYS=""  # Comma-separated list of valid API keys (optional)

# ============================================
# Monitoring & Logging
# ============================================
ENABLE_METRICS=false
SENTRY_DSN=""  # Sentry error tracking (optional)

# ============================================
# Task Storage
# ============================================
TASK_RESULT_EXPIRES=3600  # Task results expire after 1 hour (in seconds)
MAX_TASK_RESULTS=1000  # Maximum number of task results to keep in memory

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10  # Requests per window
RATE_LIMIT_WINDOW=60  # Window in seconds
